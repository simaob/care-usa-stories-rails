            <!--end recent stories/slick slides-->
            <!--Quick Donate form-->
            <form id="mainNewsletter" class="newsletter-form" action="#" method="post">
                <h4>The lastest from Care</h4>
                <input id="newsletterEmail" name="newsletterInput" value="" placeholder="Enter email address">
                <button id="newsletterSubmit" class="button" type="button" name="newsletterBtn" title="JOIN">JOIN</button>
            </form>
            <!--end Quick Donate form-->
        </main>
        <footer class="footer-container">
            <div class="footer-holder">
                <section class="social-links">
                    <a href="" class="social-links-item facebook-link">
